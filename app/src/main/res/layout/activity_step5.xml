<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bcg"
    tools:context=".Step5">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/nd_astroneer"
        android:text="Step 5/5"
        android:textColor="@color/white"
        android:textSize="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/nd_astroneer"
        android:text="Whatâ€™s your height and weight?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/button14"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_marginTop="164dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/white"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/titleclr"
        android:textSize="24sp"
        app:cornerRadius="39dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber4" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="82dp"

        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:hint="Height"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        android:paddingLeft="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/editTextNumber4"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_marginTop="23dp"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:hint="Weight"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/black"
        android:paddingLeft="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber3" />
</androidx.constraintlayout.widget.ConstraintLayout>