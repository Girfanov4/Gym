<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bcg"
    tools:context=".Step2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/nd_astroneer"
        android:text="What is your gender?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/button2"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/rounded_button"
        android:insetTop = "0dp"
        android:insetBottom = "0dp"
        android:insetLeft = "0dp"
        android:insetRight = "0dp"
        android:drawableEnd="@drawable/female"
        android:paddingRight="15dp"
        android:fontFamily="@font/nd_astroneer"
        android:textAllCaps="false"
        android:textColor="@color/titleclr"
        android:textSize="24sp"
        app:cornerRadius="39dp"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button4"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="49dp"
        android:background="@drawable/rounded_button"
        android:paddingRight="15dp"
        android:drawableEnd="@drawable/male"
        android:insetTop = "0dp"
        android:insetBottom = "0dp"
        android:insetLeft = "0dp"
        android:insetRight = "0dp"
        android:fontFamily="@font/nd_astroneer"
        android:textAllCaps="false"
        android:textColor="@color/titleclr"
        android:textSize="24sp"
        app:cornerRadius="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="163dp"
        android:fontFamily="@font/nd_astroneer"
        android:text="Step 2/5"
        android:textColor="@color/white"
        android:textSize="50sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/nd_astroneer"
        android:text="Female"
        android:textColor="@color/white"
        android:textSize="24sp"

        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/nd_astroneer"
        android:text="Male"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button12"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/nd_astroneer"
        android:text="Next"
        android:insetTop = "0dp"
        android:insetBottom = "0dp"
        android:insetLeft = "0dp"
        android:insetRight = "0dp"
        android:textAllCaps="false"
        android:textColor="@color/titleclr"
        android:textSize="24sp"
        app:cornerRadius="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

</androidx.constraintlayout.widget.ConstraintLayout>